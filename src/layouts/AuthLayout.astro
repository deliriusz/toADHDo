---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
}

const { title = "toADHDo" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900">
    <div class="container mx-auto flex min-h-screen flex-col items-center justify-center px-4 py-8">
      <header class="mb-8 text-center">
        <h1
          class="text-4xl font-bold bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text drop-shadow-lg"
        >
          toADHDo
        </h1>
        <p class="mt-2 text-lg text-blue-100/90">Task management designed for ADHD brains</p>
      </header>

      <main
        class="w-full max-w-md backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl p-8 shadow-2xl border border-white/10 text-white"
      >
        <slot />
        <Toaster richColors closeButton client:only="react" />
      </main>

      <footer class="mt-8 text-center text-sm text-blue-100/70">
        <p>&copy; {new Date().getFullYear()} toADHDo. All rights reserved.</p>
      </footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
